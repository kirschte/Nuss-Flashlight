<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/dirtygold"
    android:weightSum="1">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
            <Button android:layout_width="100dp" android:layout_height="100dp" android:id="@+id/buttonStart" android:text="@string/start"
                android:layout_marginTop="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background = "@drawable/roundedbutton" />
            <TextView android:text="@string/status_leer" android:id="@+id/status" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="@color/niceblue"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView android:text="@string/nuss" android:id="@+id/nuss" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="@color/niceblue"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/abc_dropdownitem_text_padding_right" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
